<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <style>
            .steamicon
            {
                width: 32px;
                height: 32px;
                display: inline-block;
                vertical-align: middle;
            }

            body {
                background-color: #1b2838;
                color: #b8b6b4;
                font-family: "Segoe UI", sans-serif;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <h1>
                steam-match-web
            </h1>
            {% for game in l %}
                <p>
                    {% if game.icon is equalto "" %}
                        <div class="steamicon"></div> <a href="http://store.steampowered.com/app/{{ game.appid }}/">{{ game.name }}</a>
                    {% else %}
                        <img class="steamicon" src="http://media.steampowered.com/steamcommunity/public/images/apps/{{ game.appid }}/{{ game.icon }}.jpg"> <a href="http://store.steampowered.com/app/{{ game.appid }}/">{{ game.name }}</a>
                    {% endif %}
                </p>
            {% endfor %}
        </div>
    </body>
</html>
